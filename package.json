{
  "name": "@ember-template-lint/todo-utils",
  "version": "8.0.0-beta.3",
  "repository": "https://github.com/ember-template-lint/ember-template-lint-todo-utils.git",
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "clean": "tsc --build --clean",
    "docs:update": "yarn build && node scripts/generate-api-docs.js",
    "lint": "eslint . --ext .ts",
    "prepare": "yarn build",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "@types/eslint": "^7.2.6",
    "fs-extra": "^9.0.1",
    "slash": "^3.0.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.7",
    "@types/slash": "^3.0.0",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "date-fns": "^2.17.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "eslint-plugin-unicorn": "^22.0.0",
    "fixturify-project": "^2.1.1",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "^6.0.1",
    "prettier": "^2.2.1",
    "release-it": "^13.6.5",
    "release-it-lerna-changelog": "^2.3.0",
    "tmp": "^0.2.1",
    "ts-jest": "^26.5.1",
    "type-fest": "^0.20.2",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "10.* || 12.* || >= 14"
  },
  "files": [
    "lib/"
  ],
  "resolutions": {
    "yargs-parser": "^20.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "12.18.4",
    "yarn": "1.22.10"
  }
}
